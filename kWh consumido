kWh = int(input('digite cada kWh consumido'))
print("escolha uma letra entre R (residencial), C (comercial) e I(industrial)")
escolha = input('digite uma letra entre R, C e I')
if escolha == "R":
    if kWh <= 500:
        print("0,40 reais")
    else:
        print("0,65 reais")

elif escolha == "C":
    if kWh <=1000:
        print("0,55 reais")
    else:
        print("0,65 reais")

elif escolha == "I":
    if kWh <=5000:
        print("0,55 reais")
    else:
        print("0,65 reais")
